{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "src/*": [
         "src/*"
      ]
    },
    "outDir": "docs",
    "noImplicitAny": false,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true
  },
  "include": ["**/*.test.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
